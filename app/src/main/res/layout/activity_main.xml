<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/captureIDfield"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Enter Capture ID Name"
        app:layout_constraintEnd_toStartOf="@+id/captureIDButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/start_button"
        android:layout_width="175dp"
        android:layout_height="161dp"
        android:background="@color/colorPrimary"
        android:text="Start capture"
        android:textColor="@android:color/primary_text_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jsonLabel" />

    <Button
        android:id="@+id/captureIDButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="confirm"
        app:layout_constraintBottom_toBottomOf="@+id/captureIDfield"
        app:layout_constraintStart_toEndOf="@+id/captureIDfield"
        app:layout_constraintTop_toTopOf="@+id/captureIDfield" />

    <TextView
        android:id="@+id/jsonLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/captureIDfield" />

    <EditText
        android:id="@+id/stride_len"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Enter Stride Length "
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/captureIDfield"
        app:layout_constraintTop_toBottomOf="@+id/captureIDfield" />

</androidx.constraintlayout.widget.ConstraintLayout>